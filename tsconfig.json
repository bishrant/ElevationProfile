{
    "compilerOptions": {
      "module": "amd",
      "noImplicitAny": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "jsx": "react",
      "jsxFactory": "tsx",
      "target": "es5",
      "strict": true,
      "strictPropertyInitialization": false,
      "experimentalDecorators": true,
      "preserveConstEnums": true,
      "suppressImplicitAnyIndexErrors": true,
      "moduleResolution": "node",
      "lib": [ "DOM", "ES5", "ES2015"],
      "outDir": "./app/dist",
      
    },
    "include": [
      "./app/src/*","app/src/decs.d.ts"
    ],
    "exclude": [
      "node_modules"
    ],
    
  }